# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = false
        interval = 1
}

order += "cpu_usage"
order += "disk /"
order += "volume master"
order += "wireless _first_"
order += "battery all"
order += "tztime local"

wireless _first_ {
        format_up = "   %essid "
        format_down = "   Disconnected"
}

battery all {
        format = " %status%percentage " 
		hide_seconds = true
		status_chr = " "
		status_bat = "  " 
}

tztime local {
        format = " %a %d %b %H:%M:%S "
}

volume master {
        format = "  %volume "
        format_muted = "   %volume "
        device = "pulse:0"
}

disk "/" {
        format = "   %avail "
		prefix_type = custom
}

cpu_usage {
        format = "   %usage "
}
